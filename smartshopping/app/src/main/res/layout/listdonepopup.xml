<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:background="#e99595"
    android:layout_height="230dp">

    <TextView
        android:id="@+id/done_message"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:text="You are about to complete your shopping, this will transfer all your current shopping to your history, Are you sure?"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/done_yes"
            android:layout_margin="10dp"
            android:text="YES"
            android:minWidth="120dp"
            android:background="@android:drawable/btn_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/done_no"
            android:layout_margin="10dp"
            android:text="NO"
            android:minWidth="120dp"
            android:background="@android:drawable/btn_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>